{
	"name": "@svta/cmcd-validator",
	"version": "0.2.0",
	"description": "CMCD verification proxy for validating Common Media Client Data",
	"license": "Apache-2.0",
	"type": "module",
	"bin": {
		"cmcd-validator": "bin/cmcd-validator.js"
	},
	"files": [
		"dist/**/*",
		"bin/**/*"
	],
	"scripts": {
		"build": "tsdown src/bin.ts --format esm --platform node --clean",
		"dev": "node services/cmcd-validator/bin/cmcd-validator.js",
		"delete": "curl -X DELETE http://localhost:2623/reports",
		"test": "node --no-warnings --test test/**/*.test.ts"
	},
	"engines": {
		"node": ">=22.13.0"
	},
	"dependencies": {
		"@svta/cml-cmcd": "*",
		"@svta/cml-structured-field-values": "*",
		"@svta/cml-utils": "*"
	}
}
